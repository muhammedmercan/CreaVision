<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ai.creavision.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_createFragment"
            app:destination="@id/allResultsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_fullScreenDialogFragment"
            app:destination="@id/fullScreenDialogFragment" />
        <action
            android:id="@+id/action_homeFragment_to_allOldResultsFragment"
            app:destination="@id/allOldResultsFragment" />
    </fragment>
    <fragment
        android:id="@+id/allResultsFragment"
        android:name="com.ai.creavision.presentation.results.AllResultsFragment"
        android:label="fragment_create"
        tools:layout="@layout/fragment_all_results" >
        <action
            android:id="@+id/action_createFragment_to_singleResultFragment"
            app:destination="@id/singleResultFragment" />
    </fragment>
    <dialog
        android:id="@+id/fullScreenDialogFragment"
        android:name="FullScreenDialogFragment"
        android:label="FullScreenDialogFragment" />
    <fragment
        android:id="@+id/singleResultFragment"
        android:name="com.ai.creavision.presentation.results.SingleResultFragment"
        android:label="SingleResultFragment" >
        <action
            android:id="@+id/action_singleResultFragment_to_createFragment"
            app:destination="@id/allResultsFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/allOldResultsFragment"
        android:name="com.ai.creavision.presentation.your_arts.YourArtsFragment"
        android:label="fragment_all_old_results"
        tools:layout="@layout/fragment_your_arts" >
        <action
            android:id="@+id/action_allOldResultsFragment_to_singleYourArtFragment"
            app:destination="@id/singleYourArtFragment" />
    </fragment>
    <fragment
        android:id="@+id/singleYourArtFragment"
        android:name="com.ai.creavision.presentation.results.SingleYourArtFragment"
        android:label="SingleYourArtFragment" />
</navigation>